<?xml version="1.0"?>

<Shader>
    
    <Defines backend="OPENGL">
        <Define name="FRAGMENT_COLOUR">vec4(1, 1, 1, 1)</Define>
    </Defines>
    
    <Vertex backend="OPENGL" src="shader/shared/simple.vert"/>
    <Vertex backend="VULKAN" src="shader/shared/simple2.vert"/>
    
    <Fragment backend="OPENGL"
              src_string="
in vec4 v_colour;

out vec4 f_colour;

        
void main() {
    f_colour = v_colour * FRAGMENT_COLOUR;
}
"/>
    
</Shader> 